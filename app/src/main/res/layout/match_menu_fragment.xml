<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/start_game_button_lights"
        android:layout_width="@dimen/match_menu_fragment_start_game_button_lights"
        android:layout_height="@dimen/match_menu_fragment_start_game_button_lights"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_start_lights"/>

    <ImageView
        android:id="@+id/start_game_button"
        android:layout_width="@dimen/match_menu_fragment_start_game_button"
        android:layout_height="@dimen/match_menu_fragment_start_game_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/match_menu_fragment_start_game_button_margin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_start" />

    <ImageView
        android:id="@+id/settings_game_button"
        android:layout_width="@dimen/match_menu_fragment_settings_game_button"
        android:layout_height="@dimen/match_menu_fragment_settings_game_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/match_menu_fragment_settings_game_button_margin"
        android:layout_toLeftOf="@id/start_game_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_settings" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="@dimen/match_menu_fragment_title_width"
        android:layout_height="@dimen/match_menu_fragment_title_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/match_menu_fragment_title_margin_top"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/tooltip"
        android:layout_width="@dimen/match_menu_fragment_tooltip_width"
        android:layout_height="@dimen/match_menu_fragment_tooltip_height"
        android:layout_alignLeft="@id/settings_game_button"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/match_menu_fragment_tooltip_margin_left"
        android:scaleType="centerCrop"
        android:src="@drawable/tooltip_play"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/match_menu_fragment_tooltip_margin_bottom"/>
    <!--this line removed from above ImageView:
    android:layout_alignLeft="@id/google_play_button"
    TODO how to align the tooltip? I've tried with alignRight on settings_game_button
     and alignTop on start_game_button-->


</RelativeLayout>