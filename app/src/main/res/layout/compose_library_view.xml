<?xml version="1.0" encoding="utf-8"?>
<ws.isak.bridge.ui.ComposeLibraryView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The Library View is designed around a scroll view with a linear layout inside it.  ImageButtons
     with spectrograms drawn on them from the library are programmatically added to the LinearLayout -->

    <ScrollView
        android:id="@+id/compose_game_scrolling_images_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/compose_game_scrolling_images_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</ws.isak.bridge.ui.ComposeLibraryView>